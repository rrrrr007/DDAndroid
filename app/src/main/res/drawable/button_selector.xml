<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item android:top="1dip" android:left="1dip">
                <shape>
                    <solid android:color="#009479" />
                    <corners android:radius="5.0dip" />
                </shape>
            </item>
            <item android:bottom="1dip" android:right="1dip">
                <shape>
                    <gradient android:angle="315" android:endColor="#009479" android:startColor="#19b786" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <layer-list>
            <item android:top="1dip" android:left="1dip">
                <shape>
                    <solid android:color="#009479" />
                    <corners android:radius="5.0dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <gradient android:angle="315" android:endColor="#009479" android:startColor="#19b786" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#10000000" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item android:bottom="1dip" android:right="1dip">
                <shape>
                    <gradient android:angle="315" android:endColor="#AFDCD3" android:startColor="#AFDCD3" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>