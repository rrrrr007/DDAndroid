<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selector_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.diucity.dingding.activity.PINActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="148px"
        android:background="@drawable/toolbar_shape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="148px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="60px"
        android:text="验证手机号"
        android:textColor="@color/text_black"
        android:textSize="17sp" />

    <com.diucity.dingding.widget.LightImage
        android:id="@+id/iv_forget_back"
        android:layout_width="wrap_content"
        android:layout_height="148px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="60px"
        android:scaleType="center"
        android:src="@mipmap/ic_cmm_return_green" />

    <TextView
        android:id="@+id/tv_forget_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208px"
        android:text="请输入您得手机号完成验证"
        android:textColor="@color/text_gray2"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_below="@id/tv_forget_describe"
        android:layout_marginLeft="206px"
        android:layout_marginTop="90px"
        android:gravity="center"
        android:text="+86"
        android:textColor="@color/text_black"
        android:textSize="17sp" />

    <com.diucity.dingding.widget.PhoneEditText
        android:id="@+id/edt_forget_phone"
        android:layout_width="410px"
        android:layout_height="100px"
        android:layout_below="@id/tv_forget_describe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90px"
        android:background="@null"
        android:hint="100 0000 0000"
        android:inputType="number"
        android:maxLength="13"
        android:paddingLeft="120px"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_forget_icon"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_alignTop="@id/edt_forget_phone"
        android:layout_toRightOf="@id/edt_forget_phone"
        android:scaleType="center"
        android:src="@mipmap/ic_cmm_rev_list"
        android:visibility="gone" />

    <View
        android:id="@+id/view_forget"
        android:layout_width="410px"
        android:layout_height="1px"
        android:layout_below="@id/edt_forget_phone"
        android:layout_centerHorizontal="true"
        android:background="@drawable/line_shape" />

    <Button
        android:id="@+id/btn_forget_enter"
        android:layout_width="410px"
        android:layout_height="88px"
        android:layout_below="@id/edt_forget_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70px"
        android:background="@drawable/button_selector"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@drawable/text_shape" />

    <FrameLayout
        android:id="@+id/fl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="150px" />

    <include
        layout="@layout/notice_small"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="150px" />

</com.zhy.autolayout.AutoRelativeLayout>
