<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.diucity.dingding.activity.PINActivity">

    <include
        layout="@layout/notice_toolbar"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="100%"
        />

    <TextView
        android:id="@+id/tv_forget_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="请输入您得手机号完成验证"
        app:layout_marginTopPercent="15%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="+86"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="25%"
        app:layout_widthPercent="10%" />

    <EditText
        android:id="@+id/edt_forget_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="13990685003"
        android:inputType="phone"
        android:maxLength="15"
        android:textColorHint="@android:color/darker_gray"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="25%"
        app:layout_paddingLeftPercent="10%"
        app:layout_widthPercent="60%" />

    <Button
        android:id="@+id/btn_forget_enter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="下一步"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginTopPercent="40%"
        app:layout_widthPercent="60%" />
</com.zhy.android.percent.support.PercentRelativeLayout>
