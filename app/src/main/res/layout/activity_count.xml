<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_count"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.diucity.dingding.activity.CountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:background="@color/selector_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="回收"
        android:textColor="@color/text_black"
        android:textSize="17sp" />

    <com.diucity.dingding.widget.LightImage
        android:id="@+id/iv_count_back"
        android:layout_width="wrap_content"
        android:layout_height="88px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:scaleType="center"
        android:src="@mipmap/ic_cmm_return_green" />

    <TextView
        android:enabled="false"
        android:id="@+id/tv_count_payment"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="14px"
        android:background="@drawable/btn_title_press_selector"
        android:gravity="center"
        android:paddingEnd="30px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingStart="30px"
        android:text="结算"
        android:textColor="@color/selector_white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_count_header"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="88px"
        android:padding="5px" />

    <TextView
        android:id="@+id/tv_count_name"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_marginTop="88px"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@id/iv_count_header"
        android:gravity="center"
        android:textColor="#606664"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_count_all"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:layout_marginTop="88px"
        android:gravity="center_vertical"
        android:text="0.00元"
        android:textColor="#f9960d"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="168px"
        android:background="@drawable/title_shape" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_count"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="178px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_count_edt"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:background="#eef0ef"
        android:fitsSystemWindows="true"
        android:padding="14px">

        <EditText
            android:id="@+id/edt_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_shape"
            android:gravity="right|center_vertical"
            android:inputType="numberDecimal"
            android:paddingRight="14px"
            android:textColor="@color/text_black"
            android:textColorHint="#c0ccc8"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_count_hint"
            android:layout_marginRight="16px"
            android:text="请输入数量"
            android:textSize="16sp"
            android:textColor="#c0ccc8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_count_oneprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:gravity="center"
            android:text="单价\n0.00/斤"
            android:textColor="#606664"
            android:textSize="12sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="14px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="14px"
            android:layout_toRightOf="@id/tv_count_oneprice"
            android:background="#eef0ef" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <FrameLayout
        android:id="@+id/fl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="150px" />

    <include
        layout="@layout/notice_small"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="150px" />

</com.zhy.autolayout.AutoRelativeLayout>



