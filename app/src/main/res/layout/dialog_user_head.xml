<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_user_camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dialog_shape_head"
        android:gravity="center"
        android:text="拍照上传"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/dialog_tv_user_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dialog_shape_head2"
        android:gravity="center"
        android:text="从相册选取照片"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/dialog_tv_user_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/diolog_shape"
        android:gravity="center"
        android:text="取消"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="100%" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="100%" />
</com.zhy.android.percent.support.PercentLinearLayout>