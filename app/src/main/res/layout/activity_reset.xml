<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/selector_white"
    tools:context="com.diucity.dingding.activity.ResetActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/toolbar_shape"
        app:layout_heightPercent="11%"
        app:layout_widthPercent="100%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="修改登录密码"
        android:textColor="@color/text_black"
        android:textSize="17sp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="100%" />

    <TextView
        android:id="@+id/tv_reset_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_green"
        android:textSize="14sp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="3%"
        app:layout_paddingLeftPercent="3%"
        app:layout_paddingRightPercent="3%" />

    <EditText

        android:id="@+id/edt_reset_old"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_reset_back"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:gravity="center"
        android:hint="输入原始密码"
        android:inputType="number"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray"
        android:textSize="17sp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="57%" />

    <View
        android:id="@+id/view_reset_1"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_below="@id/edt_reset_old"
        android:layout_centerHorizontal="true"
        android:background="@color/text_gray"
        app:layout_widthPercent="57%" />

    <EditText
        android:id="@+id/edt_reset_new"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/edt_reset_old"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:gravity="center"
        android:hint="输入新的登录密码"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray"
        android:textSize="17sp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="57%" />

    <View
        android:id="@+id/view_reset_2"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_below="@id/edt_reset_new"
        android:layout_centerHorizontal="true"
        android:background="@color/text_gray"
        app:layout_widthPercent="57%" />

    <EditText
        android:id="@+id/edt_reset_affirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/edt_reset_new"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:gravity="center"
        android:hint="再次输入新的登录密码"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray"
        android:textSize="17sp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="57%" />

    <View
        android:id="@+id/view_reset_3"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_below="@id/edt_reset_affirm"
        android:layout_centerHorizontal="true"
        android:background="@color/text_gray"
        app:layout_widthPercent="57%" />

    <ImageView
        android:id="@+id/iv_reset_icon1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@id/edt_reset_old"
        android:layout_toRightOf="@id/edt_reset_old"
        android:scaleType="center"
        android:src="@mipmap/ic_cmm_rev_list"
        android:visibility="gone"
        app:layout_heightPercent="8%" />

    <ImageView
        android:id="@+id/iv_reset_icon2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@id/edt_reset_new"
        android:layout_toRightOf="@id/edt_reset_new"
        android:scaleType="center"
        android:src="@mipmap/ic_cmm_rev_list"
        android:visibility="gone"
        app:layout_heightPercent="8%" />

    <ImageView
        android:id="@+id/iv_reset_icon3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@id/edt_reset_affirm"
        android:layout_toRightOf="@id/edt_reset_affirm"
        android:scaleType="center"
        android:src="@mipmap/ic_cmm_rev_list"
        android:visibility="gone"
        app:layout_heightPercent="8%" />

    <Button
        android:id="@+id/btn_reset_finish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/edt_reset_affirm"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_selector"
        android:enabled="false"
        android:text="完    成"
        android:textColor="@drawable/text_shape"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="7%"
        app:layout_widthPercent="57%" />
    <FrameLayout
        android:id="@+id/fl_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%"
        app:layout_widthPercent="100%" />

    <include
        layout="@layout/notice_small"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="11%"
        app:layout_widthPercent="100%" />

</com.zhy.android.percent.support.PercentRelativeLayout>
