<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selector_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.diucity.dingding.activity.LoginActivity">


        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="178px"
            android:src="@mipmap/login_logo" />

        <!--517 170-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginLeft="206px"
            android:layout_marginTop="517px"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edt_login_phone"
            android:layout_width="410px"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="517px"
            android:background="@null"
            android:hint="100 0000 0000"
            android:inputType="number"
            android:maxLength="15"
            android:paddingLeft="120px"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="17sp" />


        <View
            android:id="@+id/view_login_1"
            android:layout_width="410px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="616px"
            android:background="@drawable/line_shape" />

        <EditText
            android:id="@+id/edt_login_code"
            android:layout_width="410px"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="647px"
            android:background="@null"
            android:gravity="center"
            android:hint="点击输入密码"
            android:inputType="numberPassword"
            android:maxLength="10"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="17sp"
            android:theme="@style/MyEditText" />

        <View
            android:id="@+id/view_login_2"
            android:layout_width="410px"
            android:layout_height="1px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="746px"
            android:background="@drawable/line_shape" />

        <com.diucity.dingding.widget.LightText
            android:padding="20px"
            android:id="@+id/tv_login_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="757px"
            android:gravity="center"
            android:text="忘记密码？"
            android:textColor="@color/text_green"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_login_icon1"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginTop="517px"
            android:layout_toRightOf="@id/edt_login_phone"
            android:scaleType="center"
            android:src="@mipmap/ic_cmm_rev_list"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_login_icon2"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginTop="647px"
            android:layout_toRightOf="@id/edt_login_code"
            android:scaleType="center"
            android:src="@mipmap/ic_cmm_rev_list"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_login_enter"
            android:layout_width="410px"
            android:layout_height="88px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="887px"
            android:background="@drawable/button_selector"
            android:enabled="false"
            android:text="登    录"
            android:textColor="@drawable/text_shape"
            android:textSize="16sp" />

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="150px" />

        <include
            layout="@layout/notice_small"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="150px" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>
