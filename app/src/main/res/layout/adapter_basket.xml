<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/adapter_cv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_shape"
            android:orientation="vertical"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adapter_tv_price_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纸箱/斤"
                    android:textColor="@color/selector_white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/adapter_tv_price_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adapter_tv_price_name"
                    android:layout_marginTop="5dp"
                    android:text="买 ￥0.22  卖 ￥0.60"
                    android:textColor="@color/selector_white"
                    android:textSize="12sp" />
            </LinearLayout>


            <com.diucity.dingding.widget.CounterView
                android:id="@+id/adapter_tv_price_difference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.00"
                android:layout_marginRight="42px"
                android:textColor="@color/selector_white"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/adapter_tv_price_unit"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/adapter_tv_price_difference"
                android:textColor="@color/selector_white"
                android:text="元"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>