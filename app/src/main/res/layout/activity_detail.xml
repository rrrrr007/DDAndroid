<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.diucity.dingding.activity.DetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="148px"
        android:background="@drawable/toolbar_shape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="148px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="60px"
        android:text="通知详情"
        android:textColor="@color/text_black"
        android:textSize="17sp" />

    <com.diucity.dingding.widget.LightImage
        android:id="@+id/iv_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="148px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="60px"
        android:scaleType="center"
        android:src="@mipmap/ic_cmm_close_green" />

    <com.diucity.dingding.widget.ProgressView
        android:id="@+id/pv_detail"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignBottom="@id/iv_detail_back" />

    <com.tencent.smtt.sdk.WebView
        android:layout_marginTop="148px"
        android:id="@+id/web_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="150px" />

    <include
        layout="@layout/notice_small"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="150px" />

</com.zhy.autolayout.AutoRelativeLayout>
